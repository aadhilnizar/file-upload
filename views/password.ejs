<body> 
     <!-- Registration 12 - Bootstrap Brain Component -->
        <form action="/password" method="POST">
<section class="py-3 py-md-5 py-xl-8">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="mb-5">
            <h2 class="display-5 fw-bold text-center">Update Password</h2>
            <p class="text-center m-0">Enter your new password </p>
          </div>
        </div>
      </div> 
      <div class="row justify-content-center"> 
        <div class="col-12 col-lg-10 col-xl-8">
          <div class="row gy-5 justify-content-center">
            <div class="col-12 col-lg-5">
              <form action="#!">
                <div class="row gy-3 overflow-hidden">
                  <div class="col-12">
                    <div class="form-floating mb-3">
                      <input type="hidden" name="email" value="<%= email %>"> 
                      <input type="password" class="form-control" name="newPassword" id="newPassword" placeholder="Enter new password" required>
                      <label for="email" class="form-label">Password</label>
                      <input type="checkbox" onclick="myFunction()">Show Password
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="d-grid">
                      <button class="btn btn-lg btn-dark rounded-0 fs-6" type="submit">Change Password</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
           
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>
      <script>
         function myFunction() {
    var x = document.getElementById('newPassword');
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
      </script>
</body> 
